/* pages/accountMangement/accountMangement.wxss */

.hide {
  display: none !important;
}

.weui-cell {
  position: relative;
}

.cell-check {
  position: absolute;
  top: 50px;
  left: 0;
  color: red;
  font-size: 14px;
  width: 100%;
  text-align: center;
}

.account {
  position: absolute;
  display: flex;
  flex-direction: column;
  background: #d3cdb7;
  color: #2c3f46;
  height: 100%;
  width: 100%;
}

.tab {
  display: flex;
}

.tab-item {
  flex: 1;
  font-size: 10pt;
  text-align: center;
  line-height: 72rpx;
  border-bottom: 6rpx solid #725a00;
}

.content {
  flex: 1;
}

.content > swiper {
  height: 100%;
}

.tab-item.active {
  color: #d3cdb7;
  background-color: #2c3f46;
  border-bottom-color: #2c3f46;
}

.bindEmail, .changePassword, .modifyName {
  height: 100%;
  width: 80%;
  margin: 0 auto;
}

input {
  width: 100%;
  margin: 10rpx auto;
  height: 2rem;
  display: block;
  font-size: 1.3rem;
  border-bottom: #2c3f46;
}

.line {
  height: 3rpx;
  background-color: #2c3f46;
  width: 100%;
}

button {
  margin-top: 100px;
}
